        "url": "{{base_url}}/drinks-detail"
      }
    },
    {
      "name": "POST /drinks (protected)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}", "type": "text" },
          { "key": "Content-Type", "value": "application/json", "type": "text" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Latte\",\n  \"recipe\": [\n    { \"name\": \"milk\", \"color\": \"white\", \"parts\": 2 },\n    { \"name\": \"espresso\", \"color\": \"brown\", \"parts\": 1 }\n  ]\n}"
        },
        "url": "{{base_url}}/drinks"
      }
    },
    {
      "name": "PATCH /drinks/:id (protected)",
      "request": {
        "method": "PATCH",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}", "type": "text" },
          { "key": "Content-Type", "value": "application/json", "type": "text" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Sparkling Water\"\n}"
        },
        "url": "{{base_url}}/drinks/1"
      }
    },
    {
      "name": "DELETE /drinks/:id (protected)",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}", "type": "text" }
        ],
        "url": "{{base_url}}/drinks/1"
      }
    }
  ],
  "variable": [
    { "key": "base_url", "value": "http://127.0.0.1:5000" },
    { "key": "token", "value": "" }
  ]
