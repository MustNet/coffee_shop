  "item": [
    {
      "name": "GET /drinks (public)",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{base_url}}/drinks"
      }
    },
    {
      "name": "GET /drinks-detail (protected)",
      "request": {
        "method": "GET",
